<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='SearchWeb'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name="com.google.gwt.resources.Resources" />
	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.i18n.I18N" />

	<!-- Inherit the default GWT style sheet. You can change -->
	<!-- the theme of your GWT application by uncommenting -->
	<!-- any one of the following lines. -->
	<inherits name="com.google.gwt.user.theme.standard.Standard" />

	<!-- GWT Logging -->
	<inherits name="com.google.gwt.logging.Logging" />
	<set-property name="gwt.logging.logLevel" value="INFO" />
	<set-property name="gwt.logging.enabled" value="TRUE" />
	<set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED" />
	<set-property name="gwt.logging.developmentModeHandler" value="ENABLED" />
	<set-property name="gwt.logging.systemHandler" value="ENABLED" />
	<set-property name="gwt.logging.popupHandler" value="DISABLED" />
	<set-property name="gwt.logging.consoleHandler" value="DISABLED" />
	<set-property name="gwt.logging.firebugHandler" value="DISABLED" />

	<set-property name="compiler.stackMode" value="emulated" />

	<!-- Dependencies -->
	<inherits name="es.gobcan.istac.search.SearchCore" />
    <inherits name="es.gobcan.istac.idxmanager.SearchDomain" />
	<inherits name="org.siemac.metamac.web.common.MetamacWebCommon" />
	<inherits name="org.siemac.metamac.CoreCommonApi" />
	<inherits name="org.siemac.metamac.SsoClient" />
	<inherits name="org.siemac.EDatosCoreUtils" />

	<!-- GIN for dependency injection -->
	<inherits name="com.google.gwt.inject.Inject" />

	<!-- GwtPlatform -->
	<inherits name="com.gwtplatform.mvp.Mvp" />
	<inherits name="com.gwtplatform.dispatch.Dispatch" />

	<!-- We need the JUnit module in the main module, -->
	<!-- otherwise eclipse complains (Google plugin bug?) -->
	<inherits name='com.google.gwt.junit.JUnit' />

	<!-- SmartGwt -->
	<inherits name="com.smartgwt.SmartGwt" />

	<!-- Specify the app entry point class. -->
	<entry-point class='es.gobcan.istac.search.web.client.SearchWeb' />

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />

	<stylesheet src="SearchWeb.css" />

	<!-- Other module inherits -->

	<!-- Languages -->
	<extend-property name="locale" values="es" />
	<extend-property name="locale" values="en" />
	<set-property-fallback name="locale" value="es" />

	<!-- Generate code in compilation time only for gecko-based browsers -->
	<!-- <set-property name="user.agent" value="gecko1_8" /> -->

	<set-property name="ClientBundle.enableInlining" value="false" />

	<!-- Configure GIN -->
	<define-configuration-property name="gin.ginjector" is-multi-valued="false" />
	<set-configuration-property name="gin.ginjector" value="es.gobcan.istac.search.web.client.gin.SearchWebGinjector" />

</module>
