<assembly>
  <id>module</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
  <!-- Compiled resources from src/main/java are deployed in module folder: classes -->
    <fileSet>
      <directory>${project.build.directory}/classes</directory>
      <outputDirectory>/system/modules/es.gobcan.istac.portal.buscador/classes</outputDirectory>
      <excludes>
        <exclude>system/**</exclude>
        <exclude>manifest.xml</exclude>
      </excludes>
    </fileSet>
    <!-- Compiled resources from src/main/resources are deployed in module folder structure -->
    <fileSet>
      <directory>${project.build.directory}/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>system/**</include>
        <include>manifest.xml</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>