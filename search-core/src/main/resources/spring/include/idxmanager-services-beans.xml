<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">
 	
 	
 	<!-- Activates annotation-based bean configuration, permite el uso de @Autowire, @Required and @Qualifier. -->
	<context:annotation-config />
	
	<!-- Aspectos -->
	<aop:aspectj-autoproxy />
	
	<!-- Scans for application @Component, @Service, @Controller, etc. -->
	<context:component-scan base-package="es.gobcan.istac.idxmanager.service" />
	
	<!-- DataSource, para que SpringSecurity se conecte a el	-->
<!--	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">-->
<!--  		<property name="jndiName"><value>java:comp/env/jdbc/istac_gpDB</value></property>-->
<!--	</bean>-->

	<bean name="solr" class="es.gobcan.istac.idxmanager.service.solr.SolrServiceImpl">
		<property name="solrUrl" value="${istac.idxmanager.solr.endpoint}" />
        <property name="coreOrCollection" value="${istac.idxmanager.solr.core_or_collection}" />
        <property name="cloudServer" value="${istac.idxmanager.solr.cloud_server_enabled}" />
	</bean>

    <!-- Acceso al contexto de Spring desde cualquier sitio -->
    <bean id="contextApplicationContextProvider" class="es.gobcan.istac.idxmanager.service.util.ApplicationContextProvider"></bean>  
    
	<import resource="classpath:spring/crawlerIstac-beans.xml"/>	
</beans>
