<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>Search environment definition</comment>

    <!-- Configuration properties in files -->
    <entry key="environment.search.data">/data/istac/search</entry>

    <!-- Configuration properties in database (ORACLE) -->
    <entry key="environment.metamac.configuration.db.username">FILL_ME_WITH_DB_USER</entry>
    <entry key="environment.metamac.configuration.db.password">FILL_ME_WITH_DB_PASSWORD</entry>
    <entry key="environment.metamac.configuration.db.url">jdbc:oracle:thin:@FILL_ME_WITH_HOST:FILL_ME_WITH_PORT:FILL_ME_WITH_ORACLE_SID</entry>
    <entry key="environment.metamac.configuration.db.driver_name">oracle.jdbc.OracleDriver</entry>


    <entry key="istac.idxmanager.solr.urljaxi">http://localhost:9080/jaxi-web</entry>
    <!-- SOLR -->
    <entry key="istac.idxmanager.solr.endpoint">http://localhost:8983/solr</entry>
    <!-- En caso de usar un servidor Solr instalado en modo "cloud", en esta propiedad se debe especificar el nombre de la coleccion -->
    <!-- En caso de usar un servidor Solr NO instalado en modo "cloud", en esta propiedad se debe especificar el nombre del core de indexacion -->
    <entry key="istac.idxmanager.solr.core_or_collection">istac</entry>
    <!-- "true" en caso de usar un servidor Solr instalado en modo "cloud", "false" en otro caso -->
    <entry key="istac.idxmanager.solr.cloud_server_enabled">false</entry>
    
</properties>
