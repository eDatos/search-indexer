<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Scans the classpath of this application for @Components to deploy as beans -->
	<context:component-scan base-package="es.gobcan.istac.idxmanager.web.buscador, es.gobcan.istac.search.core.idxmanager.service" />

	<bean id="configurationService" class="com.arte.acom.configuration.ConfigurationServiceImpl">
		<property name="systemConfigurationFile"><value>classpath:buscador/environment.xml</value></property>
	</bean>

	<bean id="propertyPlaceholderConfigurer" class="com.arte.acom.configuration.ConfigurationServicePropertyPlaceholderConfigurer">
		<property name="configurationService">
			<ref bean="configurationService" />
		</property>
	</bean>
	
	<bean id="log4jSetup" class="com.arte.acom.logging.LoggingSetup">
<!-- 		<property name="log4jFile" value="classpath:${istac.idxmanager.buscador.data.url}/conf/dinamica/log4j.xml" /> -->
        <property name="log4jFile" value="file://${istac.idxmanager.buscador.data.url}/conf/dinamica/log4j.xml" />
	</bean>
	
	<!-- Application Message Bundle -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="classpath:i18n/mensajes" />
		<property name="cacheSeconds" value="0" />
	</bean>
	
<!-- 	<bean id="beanLocator" class="es.gobcan.istac.idxmanager.web.buscador.service.BeanLocator" /> -->
	
	<!-- Configures Spring MVC -->
	<import resource="mvc-config.xml" />
	
	<!-- Configures Services Layer -->
	<import resource="classpath:spring/include/idxmanager-services-beans.xml" />

</beans>
