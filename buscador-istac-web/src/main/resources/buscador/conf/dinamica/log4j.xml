<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true" xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <appender name="FILELOG" class="org.apache.log4j.DailyRollingFileAppender">
	    <param name="File" value="/data/gobiernodecanarias.net/istac.buscador/serverlogs/buscador-istac-${servidor:--}.log" />
        <param name="Append" value="true" />
		<param name="threshold" value="DEBUG" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p] %d{dd/MM/yyyy HH:mm:ss,SSS} (%13F:%L) -> %m%n" />
        </layout>           
     </appender>		  

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] %d{dd/MM/yyyy HH:mm:ss,SSS} (%13F:%L) -> %m%n" />
		</layout>
	</appender>
	
	<category name="org.hibernate">
		<priority value="INFO" />
	</category>
	
	<category name="org.apache.myfaces">
		<priority value="INFO" />
	</category>		

	<root>
	    <priority value ="INFO" />
	    <appender-ref ref="CONSOLE"/>
	    <appender-ref ref="FILELOG"/>	    
	</root>
</log4j:configuration>
